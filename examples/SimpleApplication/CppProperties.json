// This file is for a Visual Studio "Open Folder" project.
// It will help the IDE configure IntelliSense.

{
  "environments": [
    {

      //  Set the directory of your AXC F 2152 SYSROOTS that correspond
      //  to the firmware version on your controller.

      //  Note, these sysroots can be downloaded from the "Downloads" section of the
      //  AXL F 2152 product page at https://www.phoenixcontact.com

      // The includePaths below may change depending on the C++ version that is in the SDK

      "sysroots": "c:/2152sdk2020.6.1/sysroots"
    }
  ],
  "configurations": [
    {
      "name": "AXC2152",
      "compilerSwitches": "-std=c++11 /O1",
      "includePath": [
        "${env.sysroots}/cortexa9t2hf-neon-pxc-linux-gnueabi/usr/include",
        "${env.sysroots}/cortexa9t2hf-neon-pxc-linux-gnueabi/usr/include/c++/9.3.0",
        "${env.sysroots}/cortexa9t2hf-neon-pxc-linux-gnueabi/usr/include/c++/9.3.0/arm-pxc-linux-gnueabi",
        "${env.sysroots}/cortexa9t2hf-neon-pxc-linux-gnueabi/usr/include/c++/9.3.0/backward",
        "${env.sysroots}/cortexa9t2hf-neon-pxc-linux-gnueabi/usr/lib/gcc/arm-pxc-linux-gnueabi/9.3.0/include",
        "${env.sysroots}/x86_64-pokysdk-mingw32/usr/lib/arm-pxc-linux-gnueabi/gcc/arm-pxc-linux-gnueabi/9.3.0/include",
        "${env.sysroots}/x86_64-pokysdk-mingw32/usr/lib/arm-pxc-linux-gnueabi/gcc/arm-pxc-linux-gnueabi/9.3.0/include-fixed",

        "${workspaceRoot}/../../**" // Axioline driver root directory. (two paths up relative to this example)
      ],
      "intelliSenseMode": "linux-gcc-arm"
    }
  ]
}
